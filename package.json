{
  "name": "oa-system",
  "version": "1.0.0",
  "description": "办公自动化系统",
  "scripts": {
    "dev": "concurrently \"npm:watch-css\" \"npm:serve\"",
    "build": "tailwindcss -i ./assets/css/tailwind-src.css -o ./assets/css/tailwind.css --minify",
    "watch-css": "tailwindcss -i ./assets/css/tailwind-src.css -o ./assets/css/tailwind.css --watch",
    "serve": "live-server --port=5500 --no-browser"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  }
} 